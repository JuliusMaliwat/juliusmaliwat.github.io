---
// Library page: lightweight placeholder.
import BaseLayout from "../../layouts/BaseLayout.astro";
import Nav from "../../components/Nav.astro";
import Footer from "../../components/Footer.astro";
import { getCollection } from "astro:content";

const profileEntry = (await getCollection("profile"))[0];
const profile = profileEntry?.data;
---

<BaseLayout title="Library" description="A curated library of resources and notes.">
  <main class="page page-library">
    <Nav email={profile?.email} />
    <section class="section-heading library-hero" data-reveal>
      <p class="eyebrow">Resources</p>
      <h1>Library</h1>
      <p class="lead">Reading notes and references are coming soon.</p>
    </section>

    <section class="section-block" data-reveal>
      <div class="library-panel">
        <p class="library-panel-title">Work in progress</p>
        <p class="muted">This section will be populated with curated materials.</p>
      </div>
    </section>

    <Footer email={profile?.email} location={profile?.location} links={profile?.links} />
  </main>
</BaseLayout>
